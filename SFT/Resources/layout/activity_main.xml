<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollViewSend">

         <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/title_send_file_loc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSendFileLoc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_size"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendSize" />
                    <TextView
                        android:paddingLeft="60dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_display_size"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendDisplaySize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="70dp"
                        android:text="@string/title_send_file_ip"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendIP" />
                    <EditText
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editTextSendIP"
                        android:inputType="text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_status"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendStatus" />
                    <TextView
                        android:textColor="@android:color/holo_blue_light"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_display_status"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendDisplayStatus" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_speed"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendSpeed" />
                    <TextView
                        android:textColor="@android:color/holo_blue_light"
                        android:paddingLeft="45dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_display_speed"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendDisplaySpeed" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_timeleft"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendTimeLeft" />
                    <TextView
                        android:textColor="@android:color/holo_blue_light"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:text="@string/title_send_file_display_timeleft"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSendDisplayTimeLeft" />
                </LinearLayout>
                <ProgressBar
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:id="@+id/progressBarSend"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ProgressBar>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                    android:layout_gravity="left"
                    android:text="@string/button_send"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSend" />
                
                <Button
                    android:layout_gravity="right"
                    android:text="@string/button_send_cancel"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSendCancel" />
                </LinearLayout>

          </LinearLayout>
    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

</RelativeLayout>